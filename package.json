{
  "name": "currency-converter-api",
  "version": "0.0.0",
  "description": "A simple currency converter service",
  "main": "build/index.js",
  "scripts": {
    "build": "cross-env rimraf ./build && tsc",
    "test:unit": "jest -i -c tests/config/jest.config.unit.ts",
    "test:integration": "jest -i -c tests/config/jest.config.integration.ts",
    "test": "cross-env npm run test:unit && npm run test:integration",
    "start": "cross-env npm run ./build && node build/index.js",
    "start:dev": "nodemon",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "currency",
    "converter",
    "api",
    "node",
    "express",
    "prisma",
    "service"
  ],
  "author": "fabriciovasc",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "axios": "^1.1.3",
    "cors": "^2.8.5",
    "currency.js": "^2.0.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jest-mock-extended": "^3.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=6.x"
  }
}
