{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "sourceMap": true,
    "paths": {
      "@models/*": ["./api/models/*"],
      "@services/*": ["./api/services/*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"]
    }
  },
  "exclude": ["tests"]
}
