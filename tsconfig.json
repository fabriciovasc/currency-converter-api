{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "paths": {
      "@models/*": ["./src/api/models/*"],
      "@services/*": ["./src/api/services/*"],
      "@config/*": ["./src/config/*"],
      "@database/*": ["./src/database/*"]
    }
  },
  "exclude": ["tests"]
}
