generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

model Transaction {
  id             Int      @id @default(autoincrement())
  userId         Int
  baseCurrency   String
  quoteCurrency  String
  baseValue      Decimal
  conversionRate Decimal
  createdAt      DateTime @default(now())

  @@map("transactions")
}
