generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id             Int      @id @default(autoincrement())
  userId         Int
  currencyFrom   String
  currencyTo     String
  valueFrom      Decimal
  conversionRate Decimal
  createdAt      DateTime @default(now())

  @@map("transactions")
}
